{% extends "layouts/base.njk" %}

{% block content %}
    <div class="max-w-6xl mx-auto">
    <div class="text-center mb-8 md:mb-12 bg-blue-50 rounded-3xl p-6 md:p-12 shadow-2xl border-4 border-green-600">
        <h2 class="text-3xl md:text-5xl font-bold text-blue-900 mb-6">Manage Administrators</h2>
        <p class="text-lg md:text-xl text-gray-900 mb-8 max-w-2xl mx-auto">View and manage administrator accounts</p>
        <div class="flex flex-wrap justify-center gap-4">
            <a href="/admin/create-admin" class="bg-white hover:bg-blue-600 focus-visible:bg-blue-600 text-blue-600 hover:text-white focus-visible:text-white font-semibold py-3 px-6 md:px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg transform hover:-translate-y-1 focus-visible:-translate-y-1 inline-flex items-center text-base">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                New Admin
            </a>
            <a href="/admin" class="bg-white hover:bg-blue-600 focus-visible:bg-blue-600 text-blue-600 hover:text-white focus-visible:text-white font-semibold py-3 px-6 md:px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg transform hover:-translate-y-1 focus-visible:-translate-y-1 inline-flex items-center text-base">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <!-- Mobile Card Layout (visible on small screens) -->
        <div class="lg:hidden">
            {% if admins.length > 0 %}
            {% for admin in admins %}
            <div class="border-b border-gray-200 p-6 hover:bg-gray-50 focus-visible:bg-gray-50 transition-colors duration-200">
                <!-- Admin Name -->
                <div class="mb-4">
                    <span class="text-xl font-bold text-kainos-500">{{ admin.firstName }} {{ admin.lastName }}</span>
                </div>

                <!-- Admin Details Grid -->
                <div class="grid grid-cols-1 gap-4 mb-4">
                    <!-- Email -->
                    <div>
                        <div class="text-base font-semibold text-gray-500 mb-1">Email</div>
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-kainos-500 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <span class="text-base text-gray-900">{{ admin.email }}</span>
                        </div>
                    </div>

                    <!-- Username -->
                    <div>
                        <div class="text-base font-semibold text-gray-500 mb-1">Username</div>
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-kainos-500 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span class="text-base text-gray-900">{{ admin.username }}</span>
                        </div>
                    </div>
                </div>

                <!-- Role -->
                <div class="mb-4">
                    <div class="text-base font-semibold text-gray-500 mb-1">Role</div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-bold bg-green-100 text-green-800">
                        {{ admin.role | upper }}
                    </span>
                </div>

                <!-- Actions -->
                <div class="flex flex-col sm:flex-row gap-2">
                    <a href="/admin/admins/{{ admin.id }}/edit" class="bg-white hover:bg-yellow-500 focus-visible:bg-yellow-500 text-yellow-600 hover:text-white focus-visible:text-white px-4 py-2 rounded-lg border border-yellow-600 text-base font-medium transition-colors duration-200 flex items-center justify-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <button class="delete-admin-btn bg-white hover:bg-red-500 focus-visible:bg-red-500 text-red-600 hover:text-white focus-visible:text-white px-4 py-2 rounded-lg border border-red-600 text-base font-medium transition-colors duration-200 flex items-center justify-center" data-admin-id="{{ admin.id }}">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete
                    </button>
                </div>
            </div>
            {% endfor %}
            {% else %}
            <div class="p-6 text-center text-gray-500">
                <p class="text-lg mb-4">No administrators found</p>
                <a href="/admin/create-admin" class="text-kainos-600 hover:text-kainos-700 focus-visible:text-kainos-700 hover:underline focus-visible:underline font-semibold">Create your first admin account</a>
            </div>
            {% endif %}
        </div>

        <!-- Desktop Table Layout (hidden on small screens) -->
        <div class="hidden lg:block overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-kainos-500">
                    <tr>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Name
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Email
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Username
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Role
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% if admins.length > 0 %}
                    {% for admin in admins %}
                    <tr class="hover:bg-gray-50 focus-visible:bg-gray-50 transition-colors duration-200">
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <span class="text-base font-semibold text-kainos-500">{{ admin.firstName }} {{ admin.lastName }}</span>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-kainos-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                                <span class="text-base text-gray-900">{{ admin.email }}</span>
                            </div>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-kainos-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                <span class="text-base text-gray-900">{{ admin.username }}</span>
                            </div>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-bold bg-green-100 text-green-800">
                                {{ admin.role | upper }}
                            </span>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <div class="flex space-x-2">
                                <a href="/admin/admins/{{ admin.id }}/edit" class="bg-white hover:bg-yellow-500 focus-visible:bg-yellow-500 text-yellow-600 hover:text-white focus-visible:text-white px-4 py-2 rounded-lg border border-yellow-600 text-base font-medium transition-colors duration-200 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Edit
                                </a>
                                <button class="delete-admin-btn bg-white hover:bg-red-500 focus-visible:bg-red-500 text-red-600 hover:text-white focus-visible:text-white px-4 py-2 rounded-lg border border-red-600 text-base font-medium transition-colors duration-200 flex items-center" data-admin-id="{{ admin.id }}">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                    {% else %}
                    <tr>
                        <td colspan="5" class="px-4 md:px-6 py-8 text-center text-gray-500">
                            <p class="text-lg mb-4">No administrators found</p>
                            <a href="/admin/create-admin" class="text-kainos-600 hover:text-kainos-700 focus-visible:text-kainos-700 hover:underline focus-visible:underline font-semibold">Create your first admin account</a>
                        </td>
                    </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Info Box -->
    <div class="mt-8 md:mt-12 text-center bg-blue-50 rounded-3xl shadow-2xl p-6 md:p-12 border-4 border-green-600">
        <p class="text-base md:text-lg text-gray-900">
            <strong>Note:</strong> Click "Edit" to modify admin details or use "Delete" to remove administrator accounts permanently.
        </p>
    </div>
    </div>

    <script>
        // Handle delete button clicks
        document.querySelectorAll('.delete-admin-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                e.preventDefault();
                const adminId = btn.dataset.adminId;
                if (confirm('Are you sure you want to delete this administrator?')) {
                    try {
                        const response = await fetch(`/api/admins/${adminId}`, {
                            method: 'DELETE'
                        });
                        if (response.ok) {
                            alert('Administrator deleted successfully');
                            window.location.reload();
                        } else {
                            alert('Failed to delete administrator');
                        }
                    } catch (error) {
                        console.error('Error deleting administrator:', error);
                        alert('Error deleting administrator');
                    }
                }
            });
        });
    </script>
{% endblock %}

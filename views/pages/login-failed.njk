{% extends "layouts/base.njk" %}

{% block title %}Login Failed - {{ super() }}{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 px-6">
    <div class="mx-auto w-full max-w-lg text-center">
        <div class="bg-white py-8 px-6 md:py-12 md:px-8 shadow-lg rounded-lg border-t-4 border-yellow-500">
            <!-- Warning Icon -->
            <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-yellow-100 mb-6">
                <svg class="h-10 w-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
            </div>

            <!-- Error Title -->
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">
                Login Failed
            </h1>

            <!-- Error Message -->
            <p class="text-base text-gray-600 mb-8">
                We couldn't log you in. Please check your credentials and try again.
            </p>

            <!-- Action Buttons -->
            <div class="space-y-3">
                <a href="/login" 
                   class="inline-block w-full text-base bg-kainos-500 hover:bg-kainos-600 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg">
                    Try Again
                </a>
                <a href="/register" 
                   class="inline-block w-full text-base bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-all duration-300">
                    Create Account
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

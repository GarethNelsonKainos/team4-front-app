{% extends "layouts/base.njk" %}

{% block content %}
    <div class="max-w-6xl mx-auto py-8">
        <!-- Page Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-4xl font-bold text-gray-800 mb-2">Manage Job Listings</h1>
                <p class="text-lg text-gray-600">Edit or delete existing job postings</p>
            </div>
            <div class="flex gap-4">
                <a href="/admin/create-job" class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition-colors flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    New Job
                </a>
                <a href="/admin" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-3 px-6 rounded-lg transition-colors flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Back
                </a>
            </div>
        </div>

        <!-- Jobs Table -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gradient-to-r from-blue-600 to-blue-700">
                        <tr>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                Role Name
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                Location
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                Capability
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                Status
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                Closing Date
                            </th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-white uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {% if jobRoles.length > 0 %}
                        {% for job in jobRoles %}
                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-lg font-semibold text-gray-800">{{ job.roleName }}</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-gray-700">{{ job.location }}</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-gray-700">{{ job.capability }}</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if job.status | lower === "open" %}
                                <span class="inline-block bg-green-100 text-green-800 text-xs font-bold px-3 py-1 rounded-full">{{ job.status | upper }}</span>
                                {% elif job.status | lower === "closed" %}
                                <span class="inline-block bg-red-100 text-red-800 text-xs font-bold px-3 py-1 rounded-full">{{ job.status | upper }}</span>
                                {% else %}
                                <span class="inline-block bg-yellow-100 text-yellow-800 text-xs font-bold px-3 py-1 rounded-full">{{ job.status | upper }}</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-gray-700">{{ job.closingDate }}</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap space-x-2">
                                <a href="/job-roles/{{ job.jobRoleId }}" class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                    Edit
                                </a>
                                <button class="inline-flex items-center bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition-colors delete-job-btn" data-job-id="{{ job.jobRoleId }}">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                    Delete
                                </button>
                            </td>
                        </tr>
                        {% endfor %}
                        {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                                <p class="text-lg">No job listings found</p>
                                <a href="/admin/create-job" class="text-blue-600 hover:text-blue-800 font-semibold mt-2 inline-block">Create your first job posting</a>
                            </td>
                        </tr>
                        {% endif %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Info Box -->
        <div class="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
            <p class="text-blue-800">
                <strong>Note:</strong> Click "Edit" to navigate to the job detail page where you can make changes. 
                Use the "Delete" button to remove job postings.
            </p>
        </div>
    </div>

    <script>
        // Handle delete button clicks
        document.querySelectorAll('.delete-job-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                e.preventDefault();
                const jobId = btn.dataset.jobId;
                if (confirm('Are you sure you want to delete this job listing?')) {
                    try {
                        const response = await fetch(`/api/job-roles/${jobId}`, {
                            method: 'DELETE'
                        });
                        if (response.ok) {
                            alert('Job deleted successfully');
                            window.location.reload();
                        } else {
                            alert('Failed to delete job');
                        }
                    } catch (error) {
                        console.error('Error deleting job:', error);
                        alert('Error deleting job');
                    }
                }
            });
        });
    </script>
{% endblock %}

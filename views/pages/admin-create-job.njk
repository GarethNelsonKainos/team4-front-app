{% extends "layouts/base.njk" %}

{% block content %}
    <div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 px-6">
        <div class="mx-auto w-full max-w-2xl">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl md:text-4xl font-bold text-kainos-500 mb-2">
                    Create New Job
                </h1>
                <p class="text-kainos-grey-500 text-base">Add a new job listing to your careers page</p>
            </div>
        
            <!-- Form Container -->
            <div class="bg-white py-6 px-6 md:py-8 md:px-8 shadow-lg rounded-lg border-t-4 border-kainos-green-500">
            <form id="createJobForm" action="/api/job-roles" method="post" class="space-y-6">
                <!-- Role Name -->
                <div>
                    <label for="roleName" class="block text-base font-semibold text-gray-700 mb-2">
                        Role Name
                    </label>
                    <input type="text" 
                           id="roleName" 
                           name="roleName" 
                           required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300"
                           placeholder="e.g. Senior Software Engineer">
                    <div id="roleNameError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Location -->
                <div>
                    <label for="location" class="block text-base font-semibold text-gray-700 mb-2">
                        Location
                    </label>
                    <input type="text" 
                           id="location" 
                           name="location" 
                           required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300"
                           placeholder="e.g. London, UK">
                    <div id="locationError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Capability -->
                <div>
                    <label for="capability" class="block text-base font-semibold text-gray-700 mb-2">
                        Capability/Department
                    </label>
                    <input type="text" 
                           id="capability" 
                           name="capability" 
                           required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300"
                           placeholder="e.g. Engineering">
                    <div id="capabilityError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Band -->
                <div>
                    <label for="band" class="block text-base font-semibold text-gray-700 mb-2">
                        Band/Level
                    </label>
                    <input type="text" 
                           id="band" 
                           name="band" 
                           required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300"
                           placeholder="e.g. Band 5">
                    <div id="bandError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Status -->
                <div>
                    <label for="status" class="block text-base font-semibold text-gray-700 mb-2">
                        Status
                    </label>
                    <div class="relative">
                        <select id="status" 
                                name="status" 
                                required 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300 appearance-none bg-white cursor-pointer">
                            <option value="">Select Status</option>
                            <option value="open">Open</option>
                            <option value="closed">Closed</option>
                            <option value="draft">Draft</option>
                        </select>
                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-gray-400">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </div>
                    </div>
                    <div id="statusError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Closing Date -->
                <div>
                    <label for="closingDate" class="block text-base font-semibold text-gray-700 mb-2">
                        Closing Date
                    </label>
                    <input type="date" 
                           id="closingDate" 
                           name="closingDate" 
                           required 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300 scale-100 focus:scale-105 focus:origin-top focus-visible:scale-105"
                           style="transition: transform 300ms cubic-bezier(0.4, 0, 0.2, 1), box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1), border-color 300ms cubic-bezier(0.4, 0, 0.2, 1), ring 300ms cubic-bezier(0.4, 0, 0.2, 1);">
                    <div id="closingDateError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Number of Open Positions -->
                <div>
                    <label for="numberOfOpenPositions" class="block text-base font-semibold text-gray-700 mb-2">
                        Number of Open Positions
                    </label>
                    <input type="number" 
                           id="numberOfOpenPositions" 
                           name="numberOfOpenPositions" 
                           required 
                           min="1"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300"
                           placeholder="1">
                    <div id="numberOfOpenPositionsError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Description -->
                <div>
                    <label for="description" class="block text-base font-semibold text-gray-700 mb-2">
                        Description
                    </label>
                    <textarea id="description" 
                              name="description" 
                              required 
                              rows="5"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300"
                              placeholder="Enter job description..."></textarea>
                    <div id="descriptionError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Responsibilities (JSON Array) -->
                <div>
                    <label for="responsibilities" class="block text-base font-semibold text-gray-700 mb-2">
                        Key Responsibilities (JSON format)
                    </label>
                    <textarea id="responsibilities" 
                              name="responsibilities" 
                              rows="4"
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300 font-mono text-sm"
                              placeholder='["Lead development teams", "Design system architecture"]'></textarea>
                    <p class="text-sm text-gray-500 mt-1">Enter as JSON array of strings</p>
                    <div id="responsibilitiesError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Sharepoint URL -->
                <div>
                    <label for="sharepointUrl" class="block text-base font-semibold text-gray-700 mb-2">
                        SharePoint URL (optional)
                    </label>
                    <input type="url" 
                           id="sharepointUrl" 
                           name="sharepointUrl" 
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 hover:ring-2 hover:ring-kainos-500 hover:border-kainos-500 transition-all duration-300"
                           placeholder="https://example.sharepoint.com/...">
                    <div id="sharepointUrlError" class="text-red-500 text-base mt-1 hidden"></div>
                </div>

                <!-- Submit Button -->
                <div class="pt-6">
                    <button type="submit" 
                            class="w-full flex justify-center items-center bg-kainos-500 hover:bg-kainos-600 focus-visible:bg-kainos-600 focus:ring-4 focus:ring-kainos-200 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg text-base">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Create Job
                    </button>
                </div>
            </form>
        </div>

        <!-- Info Box -->
        <div class="mt-8 md:mt-12 text-center bg-blue-50 rounded-3xl shadow-2xl p-6 md:p-12 border-4 border-green-600">
            <p class="text-base md:text-lg text-gray-900">
                <strong>Note:</strong> Enter responsibilities as a JSON array, e.g. <code class="bg-blue-100 px-2 py-1 rounded text-xs">["Task 1", "Task 2"]</code>
            </p>
        </div>

        <!-- Back to Dashboard -->
        <div class="mt-8 text-center">
            <a href="/admin" class="inline-flex items-center bg-white hover:bg-blue-600 focus-visible:bg-blue-600 text-blue-600 hover:text-white focus-visible:text-white font-semibold py-3 px-6 md:px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg transform hover:-translate-y-1 focus-visible:-translate-y-1 text-base">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Dashboard
            </a>
        </div>
    </div>
    </div>

    <script>
        const form = document.getElementById('createJobForm');
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Clear previous errors
            document.querySelectorAll('[id$="Error"]').forEach(el => el.classList.add('hidden'));

            try {
                // Parse responsibilities if provided
                const responsibilitiesInput = document.getElementById('responsibilities').value.trim();
                let responsibilities = [];
                if (responsibilitiesInput) {
                    try {
                        responsibilities = JSON.parse(responsibilitiesInput);
                        if (!Array.isArray(responsibilities)) {
                            throw new Error('Must be an array');
                        }
                    } catch {
                        document.getElementById('responsibilitiesError').textContent = 'Invalid JSON format';
                        document.getElementById('responsibilitiesError').classList.remove('hidden');
                        return;
                    }
                }

                const formData = {
                    roleName: document.getElementById('roleName').value,
                    location: document.getElementById('location').value,
                    capability: document.getElementById('capability').value,
                    band: document.getElementById('band').value,
                    status: document.getElementById('status').value,
                    closingDate: document.getElementById('closingDate').value,
                    numberOfOpenPositions: parseInt(document.getElementById('numberOfOpenPositions').value),
                    description: document.getElementById('description').value,
                    responsibilities: responsibilities,
                    sharepointUrl: document.getElementById('sharepointUrl').value || null
                };

                const response = await fetch('/api/job-roles', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    alert('Job created successfully!');
                    window.location.href = '/admin/jobs';
                } else {
                    const error = await response.json();
                    alert(`Error: ${error.message || 'Failed to create job'}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error creating job. Please try again.');
            }
        });
    </script>
{% endblock %}

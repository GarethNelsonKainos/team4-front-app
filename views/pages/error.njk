{% extends "layouts/base.njk" %}

{% block title %}Error - {{ super() }}{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 px-6">
    <div class="mx-auto w-full max-w-lg text-center">
        <div class="bg-white py-12 px-8 shadow-lg rounded-lg border-t-4 border-red-500">
            <!-- Error Icon -->
            <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-red-100 mb-6">
                <svg class="h-10 w-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            </div>

            <!-- Error Title -->
            <h1 class="text-3xl font-bold text-gray-800 mb-4">
                Something Went Wrong
            </h1>

            <!-- Error Message -->
            <p class="text-gray-600 mb-8">
                We're sorry, but something unexpected happened. Please try again or contact support if the problem persists.
            </p>

            <!-- Action Buttons -->
            <div class="space-y-3">
                <a href="javascript:history.back()" 
                   class="inline-block w-full bg-kainos-500 hover:bg-kainos-600 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg">
                    Go Back
                </a>
                <a href="/" 
                   class="inline-block w-full bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-all duration-300">
                    Return Home
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends "layouts/base.njk" %}

{% block title %}{{ super() }}{% endblock %}

{% block content %}
    {% if user and user.isAuthenticated %}
    <div class="min-h-screen bg-gray-50 flex flex-col justify-center items-center py-12 px-6">
        <div class="bg-blue-50 border-2 border-blue-200 rounded-lg p-8 max-w-md text-center">
            <h1 class="text-2xl font-bold text-blue-800 mb-4">Already Registered</h1>
            <p class="text-gray-700 mb-6">You're already signed in as <strong>{{ user.email }}</strong></p>
            <div class="flex gap-4">
                <a href="/" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">Go Home</a>
                <a href="/jobs" class="flex-1 bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">View Jobs</a>
            </div>
        </div>
    </div>
    {% else %}
    <div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 px-6">
        <div class="mx-auto w-full max-w-md">
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-3xl md:text-4xl font-bold text-kainos-600 mb-2">
                    Create Your Account
                </h1>
                <p class="text-gray-600 text-base">Join Kainos and start your career journey</p>
            </div>
        
            <!-- Form Container -->
            <div class="bg-white py-6 px-6 md:py-8 md:px-8 shadow-lg rounded-lg border-t-4 border-kainos-500">

            <!-- Register Form -->
            <form id="registerForm" action="/api/register" method="post" class="space-y-6">
                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-base font-semibold text-gray-700 mb-2">
                        Email Address
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                            </svg>
                        </div>
                        <input type="email" 
                               id="email" 
                               name="email" 
                               required 
                               value="{{ formData.email if formData else '' }}"
                               class="w-full pl-10 pr-3 py-3 border {% if errors and errors.email %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 transition-all duration-300"
                               placeholder="Enter your email">
                    </div>
                    {% if errors and errors.email %}
                    <div class="text-red-500 text-base mt-1">{{ errors.email }}</div>
                    {% endif %}
                </div>

                <!-- Password Field -->
                <div>
                    <label for="password" class="block text-base font-semibold text-gray-700 mb-2">
                        Password
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                        </div>
                        <input type="password" 
                               id="password" 
                               name="password" 
                               required 
                               minlength="6"
                               class="w-full pl-10 pr-10 py-3 border {% if errors and errors.password %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 transition-all duration-300"
                               placeholder="Create a password (min. 6 characters)">
                        <button type="button" 
                            id="togglePassword" 
                            class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600"
                            aria-label="Show password">
                            <svg id="eyeIcon" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                        </button>
                    </div>
                    {% if errors and errors.password %}
                    <div class="text-red-500 text-base mt-1">{{ errors.password }}</div>
                    {% else %}
                    <p class="text-base text-gray-500 mt-1">At least 6 characters and must include a number (0-9) and a special character (!@#$%^&*)</p>
                    {% endif %}
                </div>

                <!-- Confirm Password Field -->
                <div>
                    <label for="confirmPassword" class="block text-base font-semibold text-gray-700 mb-2">
                        Confirm Password
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                        </div>
                        <input type="password" 
                               id="confirmPassword" 
                               name="confirmPassword" 
                               required 
                               minlength="6"
                               class="w-full pl-10 pr-10 py-3 border {% if errors and errors.confirmPassword %}border-red-500{% else %}border-gray-300{% endif %} rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-500 focus:border-kainos-500 transition-all duration-300"
                               placeholder="Confirm your password">
                        <button type="button" 
                            id="toggleConfirmPassword" 
                            class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600"
                            aria-label="Show confirm password">
                            <svg id="eyeIconConfirm" class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                            </svg>
                        </button>
                    </div>
                    {% if errors and errors.confirmPassword %}
                    <div class="text-red-500 text-base mt-1">{{ errors.confirmPassword }}</div>
                    {% endif %}
                </div>

                <!-- Terms and Conditions -->
                <div class="flex items-start">
                    <input id="terms" 
                           name="terms" 
                           type="checkbox" 
                           required
                           class="h-4 w-4 mt-1 text-kainos-600 focus:ring-kainos-500 border-gray-300 rounded">
                    <label for="terms" class="ml-2 block text-base text-gray-700">
                        I agree to the <a href="/terms" class="text-kainos-600 hover:text-kainos-700 font-medium">Terms and Conditions</a> and <a href="/privacy" class="text-kainos-600 hover:text-kainos-700 font-medium">Privacy Policy</a>
                    </label>
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit" 
                            class="w-full flex justify-center items-center bg-kainos-500 hover:bg-kainos-600 focus:ring-4 focus:ring-kainos-200 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg text-base">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                        </svg>
                        Create Account
                    </button>
                </div>

                <!-- Error Message Display -->
                {% if errorMessage %}
                <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                        <span>{{ errorMessage }}</span>
                    </div>
                </div>
                {% endif %}
            </form>

                <!-- Sign In Link -->
                <div class="mt-6 text-center">
                    <p class="text-base text-gray-600">
                        Already have an account? 
                        <a href="/login" class="font-medium text-kainos-600 hover:text-kainos-700 transition-colors duration-300">
                            Sign in here
                        </a>
                    </p>
                </div>

                <!-- Back to Home -->
                <div class="mt-4 text-center">
                    <a href="/" class="text-base text-gray-500 hover:text-gray-700 transition-colors duration-300">
                        ‚Üê Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}

{% block scripts %}
    <script src="/js/register.js"></script>
{% endblock %}
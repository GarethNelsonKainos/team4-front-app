{% extends "layouts/base.njk" %}

{% block title %}Registration Failed - {{ super() }}{% endblock %}

{% block content %}
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 px-6">
    <div class="mx-auto w-full max-w-lg text-center">
        <div class="bg-white py-12 px-8 shadow-lg rounded-lg border-t-4 border-yellow-500">
            <!-- Warning Icon -->
            <div class="mx-auto flex items-center justify-center h-20 w-20 rounded-full bg-yellow-100 mb-6">
                <svg class="h-10 w-10 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
                </svg>
            </div>

            <!-- Error Title -->
            <h1 class="text-3xl font-bold text-gray-800 mb-4">
                Registration Failed
            </h1>

            <!-- Error Message -->
            <p class="text-gray-600 mb-8">
                We couldn't create your account. Please check your information and try again.
            </p>

            <!-- Action Buttons -->
            <div class="space-y-3">
                <a href="/register" 
                   class="inline-block w-full bg-kainos-500 hover:bg-kainos-600 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg">
                    Try Again
                </a>
                <a href="/login" 
                   class="inline-block w-full bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-all duration-300">
                    Login Instead
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

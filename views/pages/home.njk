        <!-- Carousel JavaScript -->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const track = document.getElementById('carousel-track');
                const prevBtn = document.getElementById('carousel-prev');
                const nextBtn = document.getElementById('carousel-next');
                const indicators = document.querySelectorAll('.carousel-indicator');
                const totalCards = 3;
                let currentIndex = 1; // Start at first real card (after clone)
                let isTransitioning = false;

                function updateCarousel(animate = true) {
                    const offset = -currentIndex * 100;
                    
                    if (animate) {
                        track.style.transition = 'transform 500ms ease-in-out';
                    } else {
                        track.style.transition = 'none';
                    }
                    
                    track.style.transform = `translateX(${offset}%)`;

                    // Update indicators based on real card position
                    // currentIndex: 0=clone3, 1=card1, 2=card2, 3=card3, 4=clone1
                    let indicatorIndex = currentIndex - 1;
                    if (currentIndex === 0) indicatorIndex = 2; // clone of card 3
                    if (currentIndex === 4) indicatorIndex = 0; // clone of card 1
                    
                    indicators.forEach((indicator, index) => {
                        if (index === indicatorIndex) {
                            indicator.classList.remove('bg-gray-300');
                            indicator.classList.add('bg-green-600');
                        } else {
                            indicator.classList.remove('bg-green-600');
                            indicator.classList.add('bg-gray-300');
                        }
                    });
                }

                function handleTransitionEnd() {
                    if (currentIndex === 0) {
                        // We're at the clone before the first card, jump to real last card
                        currentIndex = 3;
                        updateCarousel(false);
                    } else if (currentIndex === 4) {
                        // We're at the clone after the last card, jump to real first card
                        currentIndex = 1;
                        updateCarousel(false);
                    }
                    isTransitioning = false;
                }

                track.addEventListener('transitionend', handleTransitionEnd);

                prevBtn.addEventListener('click', function() {
                    if (isTransitioning) return;
                    isTransitioning = true;
                    currentIndex--;
                    updateCarousel(true);
                });

                nextBtn.addEventListener('click', function() {
                    if (isTransitioning) return;
                    isTransitioning = true;
                    currentIndex++;
                    updateCarousel(true);
                });

                // Indicator click handlers
                indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', function() {
                        if (isTransitioning) return;
                        isTransitioning = true;
                        currentIndex = index + 1; // +1 because first real card starts at index 1
                        updateCarousel(true);
                        setTimeout(() => {
                            isTransitioning = false;
                        }, 500);
                    });
                });

                // Initialize
                updateCarousel(false);
            });
        </script>


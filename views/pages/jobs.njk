{% extends "layouts/base.njk" %}

{% block content %}
    <div class="max-w-6xl mx-auto">
    <div class="text-center mb-8 md:mb-12 bg-blue-50 rounded-3xl p-6 md:p-12 shadow-2xl border-4 border-green-600">
        <h2 class="text-3xl md:text-5xl font-bold text-blue-900 mb-6">Available Job Roles</h2>
        <p class="text-lg md:text-xl text-gray-900 mb-8 max-w-2xl mx-auto">Discover exciting opportunities to join our innovative team</p>
        <div class="bg-green-600 rounded-lg p-4 inline-block">
            <span class="text-white font-semibold text-base">{{ jobRoles.length }} Open Positions</span>
        </div>
    </div>
    
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <!-- Mobile Card Layout (visible on small screens) -->
        <div class="lg:hidden">
            {% for job in jobRoles %}
            <div class="border-b border-gray-200 p-6 hover:bg-gray-50 focus-visible:bg-gray-50 transition-colors duration-200">
                <!-- Role Name -->
                <div class="mb-4">
                    <a href="/job-roles/{{ job.id }}" class="text-xl font-bold text-kainos-500 hover:text-kainos-700 focus-visible:text-kainos-700 hover:underline focus-visible:underline transition-colors">
                        {{ job.roleName }}
                    </a>
                </div>

                <!-- Job Details Grid -->
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <!-- Location -->
                    <div>
                        <div class="text-base font-semibold text-gray-500 mb-1">Location</div>
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-kainos-500 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span class="text-base text-gray-900">{{ job.location }}</span>
                        </div>
                    </div>

                    <!-- Capability -->
                    <div>
                        <div class="text-base font-semibold text-gray-500 mb-1">Capability</div>
                        <div class="text-base text-gray-900">{{ job.capability }}</div>
                    </div>

                    <!-- Band -->
                    <div>
                        <div class="text-base font-semibold text-gray-500 mb-1">Band</div>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-medium bg-gray-100 text-gray-800">
                            {{ job.band }}
                        </span>
                    </div>

                    <!-- Closing Date -->
                    <div>
                        <div class="text-base font-semibold text-gray-500 mb-1">Closing Date</div>
                        <div class="flex items-center">
                            <svg class="w-4 h-4 text-kainos-500 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            <span class="text-base text-gray-900">{{ job.closingDate | formatDate }}</span>
                        </div>
                    </div>
                </div>

                <!-- Status -->
                <div class="mb-4">
                    <div class="text-base font-semibold text-gray-500 mb-1">Status</div>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-bold bg-green-100 text-green-800">
                        {{ job.status | upper }}
                    </span>
                </div>

                <!-- Actions -->
                <div class="flex flex-col sm:flex-row gap-2">
                    <button class="save-btn group bg-white hover:bg-gray-50 focus-visible:bg-gray-50 text-kainos-500 px-4 py-2 rounded-lg border border-kainos-500 text-base font-medium transition-colors duration-200 flex items-center justify-center" data-job-id="{{ job.id }}">
                        <svg class="w-4 h-4 mr-1 group-hover:fill-kainos-600 group-focus-visible:fill-kainos-600 transition-all duration-200 heart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        <span class="save-text">Save</span>
                    </button>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Desktop Table Layout (hidden on small screens) -->
        <div class="hidden lg:block overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-kainos-500">
                    <tr>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Role Name
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Location
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Capability
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Band
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Closing Date
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Status
                        </th>
                        <th scope="col" class="px-4 md:px-6 py-4 text-left text-sm md:text-base font-bold text-white uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for job in jobRoles %}
                    <tr class="hover:bg-gray-50 focus-visible:bg-gray-50 transition-colors duration-200">
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <a href="/job-roles/{{ job.id }}" class="text-lg font-semibold text-kainos-500 hover:text-kainos-700  focus-visible:text-kainos-700 hover:underline focus-visible:underline transition-colors">
                                {{ job.roleName }}
                            </a>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-kainos-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                <span class="text-base font-medium text-gray-900">{{ job.location }}</span>
                            </div>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <div class="text-base text-gray-900">{{ job.capability }}</div>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-medium bg-gray-100 text-gray-800">
                                {{ job.band }}
                            </span>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <svg class="w-4 h-4 text-kainos-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <span class="text-base text-gray-900">{{ job.closingDate | formatDate }}</span>
                            </div>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-base font-bold bg-green-100 text-green-800">
                                {{ job.status | upper }}
                            </span>
                        </td>
                        <td class="px-4 md:px-6 py-4 whitespace-nowrap text-base font-medium">
                            <div class="flex space-x-2">
                                {% if features.jobDetailView %}
                                <a href="/job-roles/{{ job.id }}" class="bg-kainos-500 hover:bg-kainos-600 text-white px-4 py-2 rounded-lg text-base font-medium transition-colors duration-200 flex items-center">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                    </svg>
                                    View
                                </a>
                                {% endif %}
                                <button class="save-btn group bg-white hover:bg-gray-50 focus-visible:bg-gray-50 text-kainos-500 px-4 py-2 rounded-lg border border-kainos-500 text-base font-medium transition-colors duration-200 flex items-center" data-job-id="{{ job.id }}">
                                    <svg class="w-4 h-4 mr-1 group-hover:fill-kainos-600 group-focus-visible:fill-kainos transition-all duration-200 heart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                                    </svg>
                                    <span class="save-text">Save</span>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-8 md:mt-12 text-center bg-blue-50 rounded-3xl shadow-2xl p-6 md:p-12 border-4 border-green-600">
        <p class="text-xl md:text-2xl font-semibold text-gray-900 mb-8">Don't see the role you're looking for?</p>
        <a href="/contact" class="bg-white hover:bg-blue-600 focus-visible:bg-blue-600 text-blue-600 hover:text-white focus-visible:text-white font-semibold py-4 px-8 md:px-10 rounded-full transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg transform hover:-translate-y-1 focus-visible:-translate-y-1 inline-flex items-center text-base md:text-lg">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Get in Touch
        </a>
    </div>
    </div>

    <script>
        // Initialize saved jobs
        function initializeSaveButtons() {
            const savedJobs = JSON.parse(localStorage.getItem('savedJobs') || '[]');
            
            // Load saved state on page load
            savedJobs.forEach(jobId => {
                const btn = document.querySelector(`[data-job-id="${jobId}"]`);
                if (btn) {
                    updateButtonState(btn, true);
                }
            });

            // Attach click handlers to all save buttons
            document.querySelectorAll('.save-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const jobId = this.dataset.jobId;
                    const isCurrentlySaved = savedJobs.includes(parseInt(jobId));
                    
                    if (isCurrentlySaved) {
                        // Remove from saved
                        const index = savedJobs.indexOf(parseInt(jobId));
                        savedJobs.splice(index, 1);
                        updateButtonState(this, false);
                    } else {
                        // Add to saved
                        savedJobs.push(parseInt(jobId));
                        updateButtonState(this, true);
                    }
                    
                    // Save to localStorage
                    localStorage.setItem('savedJobs', JSON.stringify(savedJobs));
                });
            });
        }

        function updateButtonState(btn, isSaved) {
            const heart = btn.querySelector('.heart-icon');
            const text = btn.querySelector('.save-text');
            
            if (isSaved) {
                heart.setAttribute('fill', '#1f3a7d');
                text.textContent = 'Saved';
            } else {
                heart.setAttribute('fill', 'none');
                text.textContent = 'Save';
            }
        }

        // Initialize when DOM is ready
        document.addEventListener('DOMContentLoaded', initializeSaveButtons);
    </script>
{% endblock %}
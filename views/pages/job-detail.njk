{% extends "layouts/base.njk" %}

{% block content %}
    <div class="max-w-4xl mx-auto">
        <!-- Back button on white background for contrast -->
        <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
            <a href="/jobs" class="inline-flex items-center text-base text-kainos-500 hover:text-kainos-700 font-semibold transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Job Roles
            </a>
        </div>

        <!-- Job header -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
            <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-6">
                <div class="flex-1">
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 max-w-4xl">{{ job.roleName }}</h1>
                    <div class="flex flex-wrap gap-4 mb-6">
                        <div class="flex items-center bg-kainos-50 px-4 py-2 rounded-lg">
                            <svg class="w-5 h-5 text-kainos-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span class="font-semibold text-kainos-700">{{ job.location }}</span>
                        </div>
                        <div class="flex items-center bg-gray-50 px-4 py-2 rounded-lg">
                            <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <span class="font-semibold text-gray-700">{{ job.capability }}</span>
                        </div>
                        <div class="flex items-center bg-gray-50 px-4 py-2 rounded-lg">
                            <span class="font-semibold text-gray-700">{{ job.band }}</span>
                        </div>
                    </div>
                </div>

                <div class="lg:text-right space-y-4">
                    <div class="inline-block bg-green-100 text-green-800 px-4 py-2 rounded-full text-base font-bold">
                        {{ job.status | upper }}
                    </div>
                    {% if job.numberOfOpenPositions %}
                    <div class="text-base text-gray-600">
                        <strong>{{ job.numberOfOpenPositions }}</strong> position{{ 's' if job.numberOfOpenPositions > 1 else '' }} available
                    </div>
                    {% endif %}
                    <div class="text-base text-gray-600">
                        <strong>Closing Date:</strong> {{ job.closingDate | formatDate }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Job description -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
            <h2 class="text-xl md:text-2xl font-bold text-gray-800 mb-4">Description</h2>
            <p class="text-base text-gray-700 leading-relaxed">{{ job.description }}</p>
        </div>

        <!-- Responsibilities -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
            <h2 class="text-xl md:text-2xl font-bold text-gray-800 mb-6">Key Responsibilities</h2>
            <ul class="space-y-3">
                {% if job.responsibilities is string %}
                    {% set responsibilitiesList = job.responsibilities.split('\n') %}
                {% else %}
                    {% set responsibilitiesList = job.responsibilities %}
                {% endif %}
                {% for responsibility in responsibilitiesList %}
                    {% if responsibility is string %}
                        {% set cleanResponsibility = responsibility.replace('â€¢', '').trim() %}
                    {% else %}
                        {% set cleanResponsibility = responsibility %}
                    {% endif %}
                    {% if cleanResponsibility %}
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-kainos-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="text-base text-gray-700">{{ cleanResponsibility }}</span>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>

        <!-- Action buttons -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
            <div class="flex flex-col sm:flex-row lg:justify-start gap-4">
                {% if job.sharepointUrl %}
                <a href="{{ job.sharepointUrl }}" target="_blank" rel="noopener noreferrer" 
                   class="flex items-center justify-center text-base bg-kainos-500 hover:bg-kainos-600 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    View Full Job Specification
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </a>
                {% endif %}
                {% if features.jobApplyView %}
                    {% if user and user.isAuthenticated and user.role === "applicant" %}
                <button class="flex items-center justify-center text-base bg-[#008933] hover:bg-[#007a2e] text-white font-bold py-3 px-8 rounded-lg transition-colors duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Apply Now
                </button>
                    {% endif %}
                {% endif %}

                <button class="save-btn group flex items-center justify-center bg-white hover:bg-gray-50 text-kainos-500 font-bold py-3 px-6 lg:px-8 rounded-lg border-2 border-kainos-500 transition-colors duration-300 whitespace-nowrap" data-job-id="{{ job.jobRoleId }}">
                    <svg class="w-5 h-5 mr-2 group-hover:fill-kainos-600 transition-all duration-200 heart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                    <span class="save-text">Save for Later</span>
                </button>
                
                {% if user and user.isAuthenticated and user.role === "admin" %}
                <a href="/job-roles/{{ job.jobRoleId }}/edit" class="flex items-center justify-center bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit
                </a>
                <button class="delete-btn flex items-center justify-center bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-300" data-job-id="{{ job.jobRoleId }}">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                    Delete
                </button>
                {% endif %}
            </div>
        </div>

        <!-- Related jobs suggestion -->
        <div class="bg-kainos-50 border border-kainos-200 rounded-xl p-6">
            <h3 class="text-lg font-semibold text-kainos-700 mb-2">Interested in similar roles?</h3>
            <p class="text-base text-kainos-600 mb-4">Explore other opportunities in {{ job.capability }} or view all available positions.</p>
            <div class="flex flex-wrap gap-3">
                <a href="/jobs" class="text-base bg-kainos-500 hover:bg-kainos-600 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                    View All Jobs
                </a>
                <a href="/jobs?capability={{ job.capability }}" class="text-base bg-white hover:bg-gray-50 text-kainos-500 border border-kainos-500 font-medium py-2 px-4 rounded-lg transition-colors">
                    More {{ job.capability }} Roles
                </a>
            </div>
        </div>
    </div>

    <script>
        // Initialize save button
        function initializeSaveButton() {
            const savedJobs = JSON.parse(localStorage.getItem('savedJobs') || '[]');
            const jobId = {{ job.jobRoleId }};
            const btn = document.querySelector('.save-btn');

            // Load saved state on page load
            if (savedJobs.includes(jobId)) {
                updateButtonState(btn, true);
            }

            // Attach click handler
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const isCurrentlySaved = savedJobs.includes(jobId);

                if (isCurrentlySaved) {
                    // Remove from saved
                    const index = savedJobs.indexOf(jobId);
                    savedJobs.splice(index, 1);
                    updateButtonState(this, false);
                } else {
                    // Add to saved
                    savedJobs.push(jobId);
                    updateButtonState(this, true);
                }

                // Save to localStorage
                localStorage.setItem('savedJobs', JSON.stringify(savedJobs));
            });
        }

        function updateButtonState(btn, isSaved) {
            const heart = btn.querySelector('.heart-icon');
            const text = btn.querySelector('.save-text');

            if (isSaved) {
                heart.setAttribute('fill', '#1f3a7d');
                text.textContent = 'Saved';
            } else {
                heart.setAttribute('fill', 'none');
                text.textContent = 'Save for Later';
            }
        }

        // Initialize when DOM is ready
        document.addEventListener('DOMContentLoaded', initializeSaveButton);
    </script>
{% endblock %}
{% extends "layouts/base.njk" %}

{% block content %}
    <div class="max-w-4xl mx-auto">

        <!-- Job header -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
            <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-6">
                <div class="flex-1">
                    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4 max-w-4xl">{{ job.roleName }}</h1>
                    <div class="flex flex-wrap gap-4 mb-6">
                        <div class="flex items-center bg-kainos-50 px-4 py-2 rounded-lg">
                            <svg class="w-5 h-5 text-kainos-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span class="font-semibold text-kainos-700">{{ job.location }}</span>
                        </div>
                        <div class="flex items-center bg-gray-50 px-4 py-2 rounded-lg">
                            <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                            </svg>
                            <span class="font-semibold text-gray-700">{{ job.capability }}</span>
                        </div>
                        <div class="flex items-center bg-gray-50 px-4 py-2 rounded-lg">
                            <span class="font-semibold text-gray-700">{{ job.band }}</span>
                        </div>
                    </div>
                    
                    <div class="flex gap-3 items-center">
                        <button class="save-btn group flex items-center bg-white hover:bg-gray-50 focus-visible:bg-gray-50 text-kainos-500 font-semibold py-2 px-4 rounded-lg border border-kainos-500 transition-colors duration-300 whitespace-nowrap flex-shrink-0 text-sm" data-job-id="{{ job.jobRoleId }}">
                            <svg class="w-4 h-4 mr-1 group-hover:fill-kainos-600 group-focus-visible:fill-kainos-600 transition-all duration-200 heart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                            </svg>
                            <span class="save-text">Save for Later</span>
                        </button>
                        
                        {% if features.jobApplyView %}
                            {% if user and user.isAuthenticated and user.role === "applicant" %}
                        <a href="/job-roles/{{ job.jobRoleId }}/apply" class="apply-btn flex items-center justify-center text-base bg-kainos-500 hover:bg-kainos-600 focus-visible:bg-kainos-600 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-300 whitespace-nowrap">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                            Apply Now
                        </a>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>

                <div class="space-y-4">
                    {% if job.numberOfOpenPositions %}
                    <div class="text-base text-gray-600">
                        <strong>{{ job.numberOfOpenPositions }}</strong> position{{ 's' if job.numberOfOpenPositions > 1 else '' }} available
                    </div>
                    {% endif %}
                    <div class="text-base text-gray-600">
                        <strong>Closing Date:</strong> {{ job.closingDate | formatDate }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Job description -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
            <h2 class="text-xl md:text-2xl font-bold text-gray-800 mb-4">Description</h2>
            <p class="text-base text-gray-700 leading-relaxed mb-6">{{ job.description }}</p>
            
            <div class="flex gap-4">
                {% if job.sharepointUrl %}
                <a href="{{ job.sharepointUrl }}" target="_blank" rel="noopener noreferrer" 
                   class="flex items-center justify-center text-base bg-kainos-500 hover:bg-kainos-600 focus-visible:bg-kainos-600 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    View Full Job Specification
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </a>
                {% endif %}
            </div>
        </div>

        <!-- Responsibilities -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8 mb-8">
            <h2 class="text-xl md:text-2xl font-bold text-gray-800 mb-6">Key Responsibilities</h2>
            <ul class="space-y-3">
                {% if job.responsibilities is string %}
                    {% set responsibilitiesList = job.responsibilities.split('\n') %}
                {% else %}
                    {% set responsibilitiesList = job.responsibilities %}
                {% endif %}
                {% for responsibility in responsibilitiesList %}
                    {% if responsibility is string %}
                        {% set cleanResponsibility = responsibility.replace('â€¢', '').trim() %}
                    {% else %}
                        {% set cleanResponsibility = responsibility %}
                    {% endif %}
                    {% if cleanResponsibility %}
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-kainos-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="text-base text-gray-700">{{ cleanResponsibility }}</span>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>

        <!-- Related jobs suggestion -->
        <div class="mt-8 md:mt-12 text-center bg-blue-50 rounded-3xl shadow-2xl p-6 md:p-12 border-4 border-green-600">
            <h3 class="text-3xl md:text-4xl font-bold text-blue-900 mb-4">Interested in similar roles?</h3>
            <p class="text-base md:text-lg text-gray-900 mb-8">Explore other opportunities in {{ job.capability }} or view all available positions.</p>
            <div class="flex flex-wrap justify-center gap-4">
                <a href="/jobs" class="inline-flex items-center bg-white hover:bg-blue-600 focus-visible:bg-blue-600 text-blue-600 hover:text-white focus-visible:text-white font-semibold py-3 px-6 md:px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg transform hover:-translate-y-1 focus-visible:-translate-y-1 text-base">
                    View All Jobs
                </a>
                <a href="/jobs?capability={{ job.capability }}" class="inline-flex items-center bg-white hover:bg-blue-600 focus-visible:bg-blue-600 text-blue-600 hover:text-white focus-visible:text-white font-semibold py-3 px-6 md:px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg transform hover:-translate-y-1 focus-visible:-translate-y-1 text-base">
                    More {{ job.capability }} Roles
                </a>
            </div>
        </div>

        <!-- Back button -->
        <div class="mt-8 text-center">
            <a href="/jobs" class="inline-flex items-center bg-white hover:bg-blue-600 focus-visible:bg-blue-600 text-blue-600 hover:text-white focus-visible:text-white font-semibold py-3 px-6 md:px-8 rounded-full transition-all duration-300 shadow-md hover:shadow-lg focus-visible:shadow-lg transform hover:-translate-y-1 focus-visible:-translate-y-1 text-base">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Job Roles
            </a>
        </div>
    </div>

    <script>
        // Initialize save button
        function initializeSaveButton() {
            const savedJobs = JSON.parse(localStorage.getItem('savedJobs') || '[]');
            const jobId = parseInt({{ job.jobRoleId }});
            const btn = document.querySelector('.save-btn');

            // Load saved state on page load
            if (savedJobs.includes(jobId)) {
                updateButtonState(btn, true);
            }

            // Attach click handler
            btn.addEventListener('click', function (e) {
                e.preventDefault();
                const isCurrentlySaved = savedJobs.includes(jobId);

                if (isCurrentlySaved) {
                    // Remove from saved
                    const index = savedJobs.indexOf(jobId);
                    savedJobs.splice(index, 1);
                    updateButtonState(this, false);
                } else {
                    // Add to saved
                    savedJobs.push(jobId);
                    updateButtonState(this, true);
                }

                // Save to localStorage
                localStorage.setItem('savedJobs', JSON.stringify(savedJobs));
            });
        }

        function updateButtonState(btn, isSaved) {
            const heart = btn.querySelector('.heart-icon');
            const text = btn.querySelector('.save-text');

            if (isSaved) {
                heart.setAttribute('fill', '#1f3a7d');
                text.textContent = 'Saved';
            } else {
                heart.setAttribute('fill', 'none');
                text.textContent = 'Save for Later';
            }
        }

        // Initialize when DOM is ready
        document.addEventListener('DOMContentLoaded', function() {
            initializeSaveButton();
        });
    </script>
{% endblock %}
{% extends "layouts/base.njk" %}

{% block content %}
    <div class="max-w-2xl mx-auto">
        <!-- Back button -->
        <div class="bg-white rounded-lg shadow-sm p-4 mb-6">
            <a href="/job-roles/{{ job.jobRoleId }}" class="inline-flex items-center text-base text-kainos-500 hover:text-kainos-700 font-semibold transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Job Details
            </a>
        </div>

        <!-- Main content -->
        <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">
            <!-- Job header -->
            <div class="mb-8 pb-6 border-b border-gray-200">
                <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Apply for {{ job.roleName }}</h1>
                <p class="text-base text-gray-600">{{ job.location }} • {{ job.capability }}</p>
            </div>

            <!-- Already applied message -->
            {% if userHasAppliedForJob %}
            <div class="bg-blue-50 border-2 border-blue-400 rounded-lg p-6 mb-6">
                <div class="flex items-start">
                    <svg class="w-6 h-6 text-blue-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                        <h2 class="text-lg font-bold text-blue-800 mb-1">Already Applied</h2>
                        <p class="text-base text-blue-700">You have already submitted your CV for this role. You cannot upload another CV for this position.</p>
                    </div>
                </div>
            </div>
            {% else %}
            <!-- Upload form -->
            <form action="/apply/{{ job.jobRoleId }}" method="post" enctype="multipart/form-data" id="cvUploadForm" class="space-y-6">
                <!-- Drag and drop zone -->
                <div id="dropZone" class="border-3 border-dashed border-gray-300 rounded-lg p-8 text-center cursor-pointer hover:border-kainos-500 hover:bg-kainos-50 transition-colors duration-300" style="min-height: 200px;">
                    <input type="file" id="fileInput" name="cv" accept=".pdf,.doc,.docx" style="display: none;">
                    
                    <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    
                    <h3 class="text-lg font-semibold text-gray-800 mb-2">Upload Your CV</h3>
                    <p class="text-base text-gray-600 mb-2">Drag and drop your file here, or <span class="text-kainos-500 font-semibold cursor-pointer">browse files</span></p>
                    <p class="text-sm text-gray-500">Accepted formats: PDF, DOC, DOCX • Max size: 5 MB</p>
                </div>

                <!-- File preview section -->
                <div id="previewSection" class="hidden bg-gray-50 rounded-lg p-4 border border-gray-200">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <svg class="w-10 h-10 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            <div>
                                <p class="font-semibold text-gray-800" id="fileName"></p>
                                <p class="text-sm text-gray-500" id="fileSize"></p>
                            </div>
                        </div>
                        <button type="button" id="removeFile" class="text-red-600 hover:text-red-800 font-semibold">Remove</button>
                    </div>
                </div>

                <!-- Error message -->
                <div id="errorMessage" class="hidden bg-red-50 border-2 border-red-400 rounded-lg p-4">
                    <div class="flex items-start">
                        <svg class="w-6 h-6 text-red-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4v.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <h3 class="font-bold text-red-800 mb-1">Upload Failed</h3>
                            <p class="text-base text-red-700" id="errorText"></p>
                        </div>
                    </div>
                </div>

                <!-- Success message -->
                <div id="successMessage" class="hidden bg-green-50 border-2 border-green-400 rounded-lg p-4">
                    <div class="flex items-start">
                        <svg class="w-6 h-6 text-green-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <h3 class="font-bold text-green-800 mb-1">Application Submitted</h3>
                            <p class="text-base text-green-700">Your CV has been successfully uploaded. Thank you for applying!</p>
                        </div>
                    </div>
                </div>

                <!-- Loading state -->
                <div id="loadingState" class="hidden flex items-center justify-center space-x-3 bg-blue-50 rounded-lg p-6">
                    <svg class="w-6 h-6 text-kainos-500 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                    <span class="text-base font-semibold text-kainos-700">Uploading your CV...</span>
                </div>

                <!-- Upload button -->
                <button type="submit" id="uploadBtn" class="w-full flex items-center justify-center bg-kainos-500 hover:bg-kainos-600 text-white font-bold py-3 px-8 rounded-lg transition-colors duration-300">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                    </svg>
                    Submit Application
                </button>
            </form>
            {% endif %}
        </div>
    </div>

    <script>
        {% if not userHasAppliedForJob %}
        const form = document.getElementById('cvUploadForm');
        const dropZone = document.getElementById('dropZone');
        const fileInput = document.getElementById('fileInput');
        const previewSection = document.getElementById('previewSection');
        const uploadBtn = document.getElementById('uploadBtn');
        const jobId = {{ job.jobRoleId }};
        
        // File selection handler
        function handleFileSelect(file) {
            const data = {
                name: document.getElementById('fileName'),
                size: document.getElementById('fileSize')
            };
            data.name.textContent = file.name;
            data.size.textContent = (file.size / 1024).toFixed(2) + ' KB';
            previewSection.classList.remove('hidden');
            uploadBtn.disabled = false;
            hideMessages();
        }
        
        // Message display
        function showMessage(type) {
            document.getElementById('errorMessage')?.classList.add('hidden');
            document.getElementById('successMessage')?.classList.add('hidden');
            document.getElementById('loadingState')?.classList.add('hidden');
            if (type) document.getElementById(type).classList.remove('hidden');
        }
        
        // Drag and drop
        dropZone.addEventListener('dragover', e => {
            e.preventDefault();
            dropZone.classList.add('border-kainos-500', 'bg-kainos-50');
        });
        
        dropZone.addEventListener('dragleave', () => {
            dropZone.classList.remove('border-kainos-500', 'bg-kainos-50');
        });
        
        dropZone.addEventListener('drop', e => {
            e.preventDefault();
            dropZone.classList.remove('border-kainos-500', 'bg-kainos-50');
            if (e.dataTransfer.files?.length > 0) {
                handleFileSelect(e.dataTransfer.files[0]);
            }
        });
        
        // File input
        dropZone.addEventListener('click', () => fileInput.click());
        fileInput.addEventListener('change', e => {
            if (e.target.files?.length > 0) handleFileSelect(e.target.files[0]);
        });
        
        // Remove file
        document.getElementById('removeFile').addEventListener('click', () => {
            fileInput.value = '';
            previewSection.classList.add('hidden');
            uploadBtn.disabled = true;
            hideMessages();
        });
        
        // Helper
        function hideMessages() {
            showMessage(null);
        }
        {% endif %}
    </script>
{% endblock %}

{% block scripts %}
    <script src="/js/applicationService.js"></script>
{% endblock %}

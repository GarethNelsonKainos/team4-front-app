                {% if user and user.isAuthenticated %}
                {% if user.role === "admin" %}
                <li><a href="/admin" class="block {% if currentPage == 'admin' %}bg-purple-600 text-white hover:bg-purple-700{% else %}text-gray-600 hover:text-purple-600 hover:bg-purple-50{% endif %} transition-colors font-medium px-3 py-3 rounded-md">Admin</a></li>
                {% endif %}
                <li class="pt-2 border-t border-blue-100">
                    <div class="text-gray-700 font-medium px-3 py-3">{{ user.email }}</div>

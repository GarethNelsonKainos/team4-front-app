            <!-- Desktop Navigation -->
            <ul class="hidden md:flex space-x-8">
                <li><a href="/" class="{% if currentPage == 'home' %}bg-green-600 text-white hover:bg-green-700{% else %}text-gray-600 hover:text-blue-600 hover:bg-blue-50{% endif %} transition-colors font-medium px-3 py-2 rounded-md">Home</a></li>
                <li><a href="/jobs" class="{% if currentPage == 'jobs' %}bg-green-600 text-white hover:bg-green-700{% else %}text-gray-600 hover:text-blue-600 hover:bg-blue-50{% endif %} transition-colors font-medium px-3 py-2 rounded-md">Jobs</a></li>
